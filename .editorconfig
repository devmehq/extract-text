root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 240

[*.md]
trim_trailing_whitespace = false

[*.js]
trim_trailing_whitespace = false

[*.jsx]
trim_trailing_whitespace = false

[*.json]
trim_trailing_whitespace = false

[COMMIT_EDITMSG]
max_line_length = 0
